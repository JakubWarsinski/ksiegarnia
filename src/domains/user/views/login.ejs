<%- include('../../structure/views/head', { 
    title : "Logowanie",
    styles : ['/user/css/login.css', '/home/css/index.css', '/header/css/header.css', '/books/css/genres.css', '/books/css/promotion.css', '/books/css/special_buttons.css'], 
    scripts :['/home/js/index.js', '/header/js/header.js', '/books/js/item_button.js']
}); %>

<body>
    <%- include('../../header/views/header') %>
  
    <main class="login-container">
           
        <h1>Zaloguj się</h1>

        <% if (typeof error !== 'undefined' && error) { %>
            <p class="error"><%= error %></p>
        <% } %>

        <form action="/user" method="POST" class="login-form">
            <label for="email">E-mail*</label>
            <input type="text" id="email" name="email" required>

            <label for="password">Hasło*</label>
            <input type="password" id="password" name="haslo" required>

            <button type="submit">Zaloguj</button>
        </form>

        <p>Nie masz jeszcze konta? <a href="/user/new">Zarejestruj się</a></p>
        <p>Zapomniałeś hasła? <a href="/user/forgot">Zresetuj je</a></p>
    </main>

    <%- include('../../footer/views/footer') %>   
</body>
</html>

