                     0c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304l-91.4 0z"/>
                </svg>
            </a>
        </nav>
    </section>

    <section class="header-bottom">
        <a class="hide-button" href="/home/genres">
            <p>GATUNKI</p>
        </a>

        <a class="hide-button" href="/home/authors">
            <p>AUTORZY</p>
        </a>
    </section>
</header>

<script defer>
    var userData = { car : [], fav : [], carAmount : 0, favAmount : 0 }

    <% if (user) { %>
        userData.car = JSON.parse(`<%- JSON.stringify(user.car || []) %>`);
        userData.fav = JSON.parse(`<%- JSON.stringify(user.fav || []) %>`);
        userData.carAmount = `<%= user.carAmount || 0 %>`;
        userData.favAmount = `<%= user.favAmount || 0 %>`;
    <% } %>

    <% if (user) { %>
        document.getElementById('user-car-count').innerHTML = userData.carAmount;
        document.getElementById('user-fav-count').innerHTML = userData.favAmount;
    <% } %>
</script>