<%- include('../partials/html', {
    title: "Dane kontaktowe",
    styles: ['profile/contact'],
    scripts: ['profile/contact']
}) %>

<body>
    <%- include('../partials/header') %>

    <main>
        <h1 class="section-title">Dane kontaktowe</h1>

        <div id="user-data-view" class="user-box">
            <p><strong>Imię:</strong> <%= user.imie %></p>
            <p><strong>Nazwisko:</strong> <%= user.nazwisko %></p>
            <p><strong>Numer telefonu:</strong> <%= user.numer_telefonu %></p>
            <p><strong>Ulica:</strong> <%= user.ulica %></p>
            <p><strong>Numer domu:</strong> <%= user.numer_domu %></p>
            <p><strong>Numer lokalu:</strong> <%= user.numer_lokalu || "-" %></p>
            <p><strong>Kod pocztowy:</strong> <%= user.kod_pocztowy %></p>
            <p><strong>Miejscowość:</strong> <%= user.miejscowosc %></p>

            <button id="edit-button" class="checkout-button">Aktualizuj dane</button>
        </div>

        <form id="user-data-form" class="user-box hidden" method="POST" action="/user/update">
            <label for="imie">Imię: <span class="required hidden" id="err-imie">*pole wymagane</span></label>
            <input type="text" id="imie" name="imie" value="<%= user.imie %>" data-required="true">

            <label for="nazwisko">Nazwisko: <span class="required hidden" id="err-nazwisko">*pole wymagane</span></label>
            <input type="text" id="nazwisko" name="nazwisko" value="<%= user.nazwisko %>" data-required="true">

            <label for="numer_telefonu">Numer telefonu: <span class="required hidden" id="err-numer_telefonu">*pole wymagane</span></label>
            <input type="tel" id="numer_telefonu" name="numer_telefonu" value="<%= user.numer_telefonu %>" data-required="true">

            <label for="ulica">Ulica: <span class="required hidden" id="err-ulica">*pole wymagane</span></label>
            <input type="text" id="ulica" name="ulica" value="<%= user.ulica %>" data-required="true">

            <label for="numer_domu">Numer domu: <span class="required hidden" id="err-numer_domu">*pole wymagane</span></label>
            <input type="text" id="numer_domu" name="numer_domu" value="<%= user.numer_domu %>" data-required="true">

            <label for="numer_lokalu">Numer lokalu:</label>
            <input type="text" id="numer_lokalu" name="numer_lokalu" value="<%= user.numer_lokalu %>">

            <label for="kod_pocztowy">Kod pocztowy: <span class="required hidden" id="err-kod_pocztowy">*pole wymagane</span></label>
            <input type="text" id="kod_pocztowy" name="kod_pocztowy" value="<%= user.kod_pocztowy %>" data-required="true">

            <label for="miejscowosc">Miejscowość: <span class="required hidden" id="err-miejscowosc">*pole wymagane</span></label>
            <input type="text" id="miejscowosc" name="miejscowosc" value="<%= user.miejscowosc %>" data-required="true">

            <div class="button-row">
                <button type="submit" class="checkout-button">Zapisz zmiany</button>
                <button type="button" id="cancel-button" class="cancel-button">Anuluj edycję</button>
            </div>
        </form>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
