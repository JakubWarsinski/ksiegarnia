<%- include('../partials/html', { 
    title : "Zamówienia",
    styles : [ 'orders/order_list' ],
    scripts : [ 'header' ]
}); %>
  
  <body>
    <%- include('../partials/header') %>
  
    <main>
      <h1 class="user-heading">Twoje zamówienia</h1>
  
      <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
        <section class="order-list">
          <% orders.forEach(function(order) { %>
            <div class="order-item">
              <p><strong>Numer zamówienia:</strong>
                <a href="/user/orders/<%= order.id_zamowienia %>" class="order-link">
                  <%= order.id_zamowienia %>
                </a>
              </p>
              <p><strong>Data złożenia:</strong> <%= order.data_zlozenia %></p>
              <p><strong>Kwota:</strong> <%= order.kwota.toFixed(2) %> zł</p>
            </div>
          <% }); %>
        </section>
      <% } else { %>
        <p class="no-orders-message">Nie masz jeszcze żadnych zamówień.</p>
      <% } %>
  
      <div class="user-nav">
        <a href="/user" class="pill-button">← Wróć do profilu</a>
      </div>
    </main>
  
    <%- include('../partials/footer') %>   
</body>